{
    "Window": {
        "_attributes": {
            "x:Class": "WpfApplication1.MainWindow",
            "xmlns": "http://schemas.microsoft.com/winfx/2006/xaml/presentation",
            "xmlns:x": "http://schemas.microsoft.com/winfx/2006/xaml",
            "Title": "MainWindow",
            "Height": "350",
            "Width": "525"
        },
        "StackPanel": {
            "_attributes": {
                "Margin": "10"
            },
            "Label": 
                {
                    "_attributes": {
                        "FontWeight": "Bold"
                    },
                    "_text": "Male or female?"
                }
            ,
            "RadioButton": [
                {
                    "_attributes": {
                        "GroupName": "ready"
                    },
                    "_text": "Yes"
                },
                {
                    "_attributes": {
                        "GroupName": "ready"
                    },
                    "_text": "No"
                },
                {
                    "_attributes": {
                        "GroupName": "ready",
                        "IsChecked": "True"
                    },
                    "_text": "Maybe"
                },
                {
                    "_attributes": {
                        "GroupName": "sex"
                    },
                    "_text": "Male"
                },
                {
                    "_attributes": {
                        "GroupName": "sex"
                    },
                    "_text": "Female"
                },
                {
                    "_attributes": {
                        "GroupName": "sex",
                        "IsChecked": "True"
                    },
                    "_text": "Not sure"
                }
            ]
        }
    }
}